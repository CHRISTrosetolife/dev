{
  "hosting": {
    "public": "public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"]
  },
  "headers": [
    {
        "source": "**/*.@(js|mjs|css|html)",
        "headers": [
            {
                "key": "Cache-Control",
                 "value": "no-store"
            }
        ]
    }
]
}
